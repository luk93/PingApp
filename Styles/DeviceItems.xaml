<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:selectors="clr-namespace:PingApp.Selectors">
    
    <Style x:Key="IsBusy" TargetType="ListViewItem">
        <Setter Property="BorderBrush" Value="CadetBlue" />
    </Style>
    <Style x:Key="Success" TargetType="ListViewItem">
        <Setter Property="Background" Value="LightGreen" />
    </Style>
    <Style x:Key="Failed" TargetType="ListViewItem">
        <Setter Property="Background" Value="LightCoral" />
    </Style>

    <selectors:DeviceItemStyle x:Key="deviceItemStyleSelector"
                            IsBusyStyle="{StaticResource Verbose}"
                            SuccessStyle="{StaticResource Debug}"
                            FailedStyle="{StaticResource Information}"/>
    
</ResourceDictionary>